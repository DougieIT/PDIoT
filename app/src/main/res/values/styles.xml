<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/amber</item>
        <item name="colorPrimaryDark">@color/brown</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MyApp.CutCorners</item>
        <item name="materialButtonStyle">@style/Widget.MyApp.Button</item>

    </style>

    <style name="Widget.MyApp.Button" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/ShapeAppearance.MyApp.CutCorners</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="ShapeAppearance.MyApp.CutCorners" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
    </style>


</resources>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top Panel -->
    <LinearLayout
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Due Date Field -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/date_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Daily Activity Breakdown:"
            app:hintEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/date_edit_text"
                android:layout_width="match_parent"
                android:paddingTop="12dp"
                android:paddingBottom="4dp"

                android:layout_height="wrap_content"
                android:focusable="false"
                android:textColorHint="@color/grey"
                android:textColor="@color/grey"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Row with Button and Calendar Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <!-- Select Date Button -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="yyyy-mm-dd"
                android:paddingBottom="4dp"
                android:paddingLeft="4dp"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxStrokeColor="@color/grey"
                app:hintTextColor="@color/grey">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/dateInputBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="6dp"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none"
                    android:gravity="center_vertical"
                    android:textColorHint="@color/grey"
                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Calendar Icon -->
            <ImageView
                android:id="@+id/calendarIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/calendar"
                android:contentDescription="Calendar Icon"
                android:layout_marginStart="8dp"
                android:tint="?attr/colorOnSurface" />
        </LinearLayout>

        <!-- Activity Field -->

    </LinearLayout>

    <!-- Bottom Panel for Charts -->
    <LinearLayout
        android:id="@+id/bottomPanel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/topPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- PieChart -->
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChart"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_weight="1" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/activity_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hourly Intensity for:"
            app:hintEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/activity_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:padding="4dp"
                android:textColorHint="@color/grey"
                android:textColor="@color/grey"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Spinner for Action Selection -->
        <Spinner
            android:id="@+id/activitySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="4sp"
            android:layout_marginTop="16dp"
            android:textColorHint="@color/grey"

            android:spinnerMode="dropdown" />

        <!-- LineChart -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Y-Axis Description (Relative Intensity) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChart"
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <!-- X-Axis Description (Time) -->
            <TextView
                android:id="@+id/xAxisDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:text="Time"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
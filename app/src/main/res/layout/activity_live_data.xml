<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".live.LiveDataActivity">

    <!-- Classification Layout -->
    <LinearLayout
        android:id="@+id/classification_layout"
        android:layout_width="416dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Wakefulness Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Icon -->
            <ImageView
                android:id="@+id/wakefulnessIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/wakefullness"
                android:contentDescription="Wakefulness Icon"
                android:layout_marginEnd="8dp" />

            <!-- Input and Status -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/wakefulnessInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Wakefulness" />

                <TextView
                    android:id="@+id/wakefulTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No sensors connected" />
            </LinearLayout>
        </LinearLayout>

        <!-- Physical Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <!-- Icon -->
            <ImageView
                android:id="@+id/physicalIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/physical"
                android:contentDescription="Physical Icon"
                android:layout_marginEnd="8dp" />

            <!-- Input and Status -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/physicalInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Physical" />

                <TextView
                    android:id="@+id/physicalTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No sensors connected" />
            </LinearLayout>
        </LinearLayout>

        <!-- Social Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <!-- Icon -->
            <ImageView
                android:id="@+id/socialIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/social"
                android:contentDescription="Social Icon"
                android:layout_marginEnd="8dp" />

            <!-- Input and Status -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/socialInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Social" />

                <TextView
                    android:id="@+id/socialTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No sensors connected" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Respeck Graphs Section -->
    <LinearLayout
        android:id="@+id/respeck_graphs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/classification_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Respeck Live Data" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/respeck_chart"
            android:layout_width="match_parent"
            android:layout_height="100dp" />
    </LinearLayout>

    <!-- Thingy Graphs Section -->
    <LinearLayout
        android:id="@+id/thingy_graphs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/respeck_graphs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thingy Live Data" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/thingy_chart"
            android:layout_width="match_parent"
            android:layout_height="100dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".live.LiveDataActivity">

    <!-- Classification Layout -->
    <LinearLayout
        android:id="@+id/classification_layout"
        android:layout_width="416dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Wakefulness Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Icon -->
            <ImageView
                android:id="@+id/wakefulnessIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="Wakefulness Icon"
                android:src="@drawable/wakefullness" />

            <!-- Input and Status -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/wakefulnessInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Wakefulness" />

                <TextView
                    android:id="@+id/wakefulTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No sensors connected" />
            </LinearLayout>
        </LinearLayout>

        <!-- Physical Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Icon -->
            <ImageView
                android:id="@+id/physicalIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="Physical Icon"
                android:src="@drawable/position_changes" />

            <!-- Input and Status -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/physicalInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Positional Changes" />

                <TextView
                    android:id="@+id/turnsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No sensors connected" />
            </LinearLayout>
        </LinearLayout>

        <!-- Social Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Icon -->
            <ImageView
                android:id="@+id/socialIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="Social Icon"
                android:src="@drawable/efficiency" />

            <!-- Input and Status -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/efficiency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Sleep Efficiency" />

                <TextView
                    android:id="@+id/efficiencyTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No sensors connected" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Icon -->
            <ImageView
                android:id="@+id/qualityRatingIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="Social Icon"
                android:src="@drawable/quality_rating" />

            <!-- Input and Status -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/qualityRating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Quality Rating" />

                <TextView
                    android:id="@+id/qualityRatingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No sensors connected" />
            </LinearLayout>
        </LinearLayout>

        <!-- Start Recording Button -->
        <Button
            android:id="@+id/startRecordingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Start Recording"
            android:layout_marginTop="16dp" />
    </LinearLayout>

    <!-- Respeck Graphs Section -->

</androidx.constraintlayout.widget.ConstraintLayout>